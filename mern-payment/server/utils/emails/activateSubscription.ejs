      font-weight: bold;
      border-bottom: 1px solid #ddd;
    }
    .content {
      padding: 20px;
      color: #555555; /* Dark gray font color */
    }
    .button {
      display: inline-block;
      padding: 15px 25px;
      font-size: 16px;
      color: #F5F5DC !important; /* Cream white font color */
      background-color: rgb(40,41,48);
      text-align: center;
      text-decoration: none;
      border-radius: 5px;
      margin: 20px 0;
      cursor: pointer; /* Provide a pointer cursor on hover */
      transition: background-color 0.3s ease; /* Smooth background color transition on hover */
    }
    .button:hover {
      background-color: #333; /* Darken background color on hover */
    }
    .footer {
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid #ddd;
      font-size: 14px;
      color: #555;
    }
    .footer ul {
      list-style-type: none;
      padding: 0;
    }
    .footer ul li {
      display: inline;
      margin-right: 10px;
    }
    .company-name {
      color: blue;
      font-size: 24px; /* Same size as header font */
      font-weight: bold;
    }
    .gif-container {
      text-align: center;
      padding-top: 20px;
    }
    .gif-container img {
      max-width: 100%;
      height: auto;
      width: 100%;
      max-width: 500px;
    }
  </style>
</head>
